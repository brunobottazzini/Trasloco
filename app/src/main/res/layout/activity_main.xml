<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTopRightRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="showRules"
        android:text="@string/title_activity_rules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <ImageView
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.36"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:ems="10"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:inputType="textPersonName"
            android:text="@string/trasloco"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/c4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242"
            tools:ignore="TextViewEdits"
        />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="197dp"
            android:layout_height="65dp"
            android:text="@string/start"
            android:onClick="startGame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.65" />

        <Button
            android:id="@+id/buttonShowRecords"
            android:onClick="showRecords"
            android:text="@string/title_activity_records"
            app:layout_constraintTop_toBottomOf="@id/buttonStart"
            app:layout_constraintStart_toStartOf="@id/buttonStart"
            app:layout_constraintEnd_toEndOf="@id/buttonStart"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="197dp"
            android:layout_height="65dp"
            app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSetting"
        android:onClick="openSettings"
        android:text="@string/impostazioni"
        app:layout_constraintTop_toBottomOf="@id/buttonShowRecords"
        app:layout_constraintStart_toStartOf="@id/buttonShowRecords"
        app:layout_constraintEnd_toEndOf="@id/buttonShowRecords"
        android:layout_marginTop="16dp"
        android:layout_width="197dp"
        android:layout_height="65dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>